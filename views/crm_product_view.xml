<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data noupdate="0">
        <!-- Add you code here -->
        <!-- model.name action window -->
        <record id="crm_product_action" model="ir.actions.act_window">
            <field name="name">crm.product.action</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">crm.product</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    <!-- Add Text Here -->
                </p><p>
                    <!-- More details about what a user can do with this object will be OK --> 
                </p>
            </field>
        </record>

        <!-- model.name form view -->
        <record id="crm_product_view_form" model="ir.ui.view">
            <field name="name">crm.product.view.form</field>
            <field name="model">crm.product</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group string="Thông tin chung">
                            <!-- Add your fields here -->
                            <field name="sequence" string="STT"/>
                            <field name="name" string="Số đăng ký"/>
                            <field name="requirement" stirng="Nhu cầu"/>
                            <field name="type_of_real_estate" string="Loại BĐS"/>
                        </group>
                        <group string="Thông tin hồ sơ">
                            <field name="brokerage_specialist" string="Chuyên viên chăm sóc"/>
                            <field name="supporter" string="Chuyên viên tư vấn"/>
                            <field name="create_date" string="Ngày Đăng Ký"/>
                            <field name="write_date" string="Ngày tương tác"/>
                        </group>
                        <div>
                            <label for="description"/>
                            <field name="description" string="diễn giải"/>
                        </div>
                        <notebook>
                            <page string="Thông tin BĐS">
                                <group string="Địa chỉ">
                                    <field name="house_no" string="Số nhà"/>
                                    <field name="ward_no" string="Phường/Xã"/>
                                    <field name="street" string="Đường"/>
                                    <field name="state" string="Quận/Huyện"/>
                                    <field name="city" string="Thành phố/Tỉnh"/>
                                    <field name="country" invisible="1"/>
                                </group>
                                <group>
                                    <field name="type_of_road" string="Kiểu đường"/>
                                    <field name="horizontal" string="Ngang"/> <span>m</span>
                                    <field name="long" string="Dài"/><span>m</span>
                                    <field name="back_expand" string="Nở hậu"/><span>m</span>
                                    <field name="number_of_floors" string="Số tầng"/>
                                    <field name="direction" string="Hướng"/>
                                    <field name="usd_price" string="Giá USD"/>
                                    <field name="usd_price" string="Giá VND"/>
                                </group>
                            </page>
                            <page string="Thông tin chủ nhà">
                                <field name="host_name" string="Tên chủ nhà"/>
                                <field name="host_number_1" string="SĐT 1"/>
                                <field name="host_number_2" string="SĐT 2"/>
                                <field name="host_number_3" string="SĐT 3"/>
                            </page>
                            <page string="Nhật ký phân quyền">
                                
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- model.name tree view -->
        <record id="crm_product_view_tree" model="ir.ui.view">
            <field name="name">crm.product.view.tree</field>
            <field name="model">crm.product</field>
            <field name="arch" type="xml">
                <tree>
                    <!-- Add your fields here -->
                    <field name="sequence" string="STT"/>
                    <field name="name" string="Số đăng ký"/>
                    <field name="requirement" stirng="Nhu cầu"/>
                    <field name="type_of_real_estate" string="Loại BĐS"/>
                    <field name="brokerage_specialist" string="Chuyên viên chăm sóc"/>
                    <field name="supporter" string="Chuyên viên tư vấn"/>
                    <field name="create_date" string="Ngày Đăng Ký"/>
                    <field name="write_date" string="Ngày tương tác"/>
                    <field name="description" string="diễn giải"/>
                    <field name="house_no" string="Số nhà"/>
                    <field name="ward_no" string="Phường/Xã"/>
                    <field name="street" string="Đường"/>
                    <field name="state" string="Quận/Huyện"/>
                    <field name="city" string="Thành phố/Tỉnh"/>
                    <field name="country" invisible="1"/>
                    <field name="type_of_road" string="Kiểu đường"/>
                    <field name="horizontal" string="Ngang"/> <span>m</span>
                    <field name="long" string="Dài"/><span>m</span>
                    <field name="back_expand" string="Nở hậu"/><span>m</span>
                    <field name="number_of_floors" string="Số tầng"/>
                    <field name="direction" string="Hướng"/>
                    <field name="usd_price" string="Giá USD"/>
                    <field name="usd_price" string="Giá VND"/>
                    <field name="host_name" string="Tên chủ nhà"/>
                    <field name="host_number_1" string="SĐT 1"/>
                    <field name="host_number_2" string="SĐT 2"/>
                    <field name="host_number_3" string="SĐT 3"/>
                </tree>
            </field>
        </record>
        
    </data>
</odoo>